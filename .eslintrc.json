{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "no-var": "error",
    "prefer-const": "warn",
    "arrow-spacing": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }]
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "alert": "readonly",
    "confirm": "readonly",
    "fetch": "readonly"
  }
}
