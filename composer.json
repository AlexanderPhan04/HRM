{
  "name": "hrm/system",
  "description": "Human Resource Management System with MVC Architecture",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "HRM Team",
      "email": "dev@hrm.local"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mbstring": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "App\\Controllers\\": "app/Controllers/",
      "App\\Models\\": "app/Models/",
      "App\\Config\\": "app/Config/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=PSR12 app/ public/api.php",
    "lint-fix": "phpcbf --standard=PSR12 app/ public/api.php",
    "analyze": "phpstan analyse app/ --level=5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
