{
  "name": "hrm-system",
  "version": "1.0.0",
  "description": "Human Resource Management System - Frontend",
  "main": "public/assets/js/app.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint public/assets/js/**/*.js",
    "lint:fix": "eslint public/assets/js/**/*.js --fix",
    "format": "prettier --write public/assets/js/**/*.js public/assets/css/**/*.css",
    "build": "npm run lint && npm run test",
    "watch": "jest --watch"
  },
  "keywords": [
    "hrm",
    "employee-management",
    "vanilla-javascript",
    "mvc"
  ],
  "author": "HRM Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
